{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "max-len": [
            "error",
            {
                "code": 100,
                "ignoreUrls": true
            }
        ],
        "curly": [
            "error",
            "multi-line"
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": [
                [
                    "@/components",
                    "./components"
                ],
                [
                    "@/classes",
                    "./classes"
                ]
            ]
        }
    }
}